<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppCompat.Light"
    tools:context=".view.ui.fragment.DetailsFragment">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTxHas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="@string/txn_has"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="-20dp"
                android:layout_marginEnd="-20dp"
                android:background="@color/white_lite"/>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="@string/status"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="-20dp"
                android:layout_marginEnd="-20dp"
                android:background="@color/white_lite"/>

            <TextView
                android:id="@+id/tvBlockNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="@string/block_no"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="-20dp"
                android:layout_marginEnd="-20dp"
                android:background="@color/white_lite"/>

            <TextView
                android:id="@+id/tvTimeStamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="@string/time_stamp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="-20dp"
                android:layout_marginEnd="-20dp"
                android:background="@color/white_lite" />

            <TextView
                android:id="@+id/tvFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="@string/from"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="-20dp"
                android:layout_marginEnd="-20dp"
                android:background="@color/white_lite" />

            <TextView
                android:id="@+id/tvTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="@string/to"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="-20dp"
                android:layout_marginEnd="-20dp"
                android:background="@color/white_lite"/>

            <TextView
                android:id="@+id/tvValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="@string/transaction_value"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="-20dp"
                android:layout_marginEnd="-20dp"
                android:background="@color/white_lite"/>

            <TextView
                android:id="@+id/tvContactAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="@string/contact_address"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="-20dp"
                android:layout_marginEnd="-20dp"
                android:background="@color/white_lite"/>

            <TextView
                android:id="@+id/tvBlockHas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="@string/block_has"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="-20dp"
                android:layout_marginEnd="-20dp"
                android:background="@color/white_lite"/>

            <TextView
                android:id="@+id/tvTxFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="@string/txn_fee"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="-20dp"
                android:layout_marginEnd="-20dp"
                android:background="@color/white_lite"/>

            <TextView
                android:id="@+id/tvGasPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="@string/gas_price"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="-20dp"
                android:layout_marginEnd="-20dp"
                android:background="@color/white_lite"/>

            <TextView
                android:id="@+id/tvGasLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="@string/gas_limit"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="-20dp"
                android:layout_marginEnd="-20dp"
                android:background="@color/white_lite"/>

            <TextView
                android:id="@+id/tvGasUsed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="@string/gas_used"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="-20dp"
                android:layout_marginEnd="-20dp"
                android:background="@color/white_lite"/>

            <TextView
                android:id="@+id/tvCumGasUsed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="@string/cumulative_gas_used"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="-20dp"
                android:layout_marginEnd="-20dp"
                android:background="@color/white_lite"/>

            <TextView
                android:id="@+id/tvTxnIndex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="@string/txn_index"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="-20dp"
                android:layout_marginEnd="-20dp"
                android:background="@color/white_lite"/>

            <TextView
                android:id="@+id/tvTokenName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="@string/token_name"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="-20dp"
                android:layout_marginEnd="-20dp"
                android:background="@color/white_lite"/>

            <TextView
                android:id="@+id/tvTokenSyb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="@string/token_symbol"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="-20dp"
                android:layout_marginEnd="-20dp"
                android:background="@color/white_lite"/>

            <TextView
                android:id="@+id/tvTokenDec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="@string/token_decimal"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="-20dp"
                android:layout_marginEnd="-20dp"
                android:background="@color/white_lite"/>

            <TextView
                android:id="@+id/tvNonce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="@string/nonce"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="-20dp"
                android:layout_marginEnd="-20dp"
                android:background="@color/white_lite"/>

            <TextView
                android:id="@+id/tvInputData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="@string/input_data"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</ScrollView>
