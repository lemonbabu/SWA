<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F2F4"
    tools:context=".view.ui.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_header"
        android:contentDescription="@string/header_background" />

    <ImageButton
        android:visibility="gone"
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_gravity="start|center"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:background="@null"
        android:contentDescription="@string/image_back"
        android:minWidth="48dp"
        android:src="@drawable/ic_back_button" />

    <ImageButton
        android:id="@+id/btnSetting"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_gravity="end|center"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:background="@null"
        android:contentDescription="@string/image_filter"
        android:minWidth="48dp"
        android:src="@drawable/ic_settings" />

    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="120dp">

        <TextView
            android:id="@+id/tv_header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="25sp"
            android:text="@string/latest_transactions"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menuBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="20"
        android:layout_below="@+id/layoutHeader"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="-30dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:id="@+id/tvBuys"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="48dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_white_round_green"
            android:text="@string/buys"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/tvSales"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="48dp"
            android:background="@drawable/bg_white_round_red"
            android:text="@string/sales"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp" />



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/menuBar">


        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fcvMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.crytpo.shibwhalealerts.view.ui.fragment.DashboardFragment"
            tools:layout="@layout/fragment_dashboard" />

    </LinearLayout>


    <TextView
        android:id="@+id/btnBuyShib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="30dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/buy_shib"
        android:textColor="@color/primary"
        app:drawableTopCompat="@drawable/logo_small" />



</RelativeLayout>